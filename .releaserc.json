{
    "branches": ["master"],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "angular",
                "releaseRules": [
                    { "type": "feature", "release": "minor" },
                    { "type": "feat", "release": "minor" },
                    { "type": "improvement", "release": "patch" },
                    { "type": "enhancement", "release": "patch" },
                    { "type": "optimization", "release": "patch" },
                    { "type": "fix", "release": "patch" },
                    { "type": "perf", "release": "patch" },
                    { "type": "performance", "release": "patch" },
                    { "type": "hotfix", "release": "patch" },
                    { "type": "config", "release": "patch" },
                    { "type": "security", "release": "minor" },
                    { "type": "breaking", "release": "major" },
                    { "type": "docs", "release": false },
                    { "type": "readme", "release": false },
                    { "type": "style", "release": "patch" },
                    { "type": "refactor", "release": "patch" },
                    { "type": "test", "release": "patch" },
                    { "type": "build", "release": "patch" },
                    { "type": "ci", "release": "patch" },
                    { "type": "cd", "release": "patch" },
                    { "type": "chore", "release": "patch" },
                    { "type": "revert", "release": "patch" },
                    { "type": "rollback", "release": "patch" },
                    { "type": "release", "release": "patch" }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        { "type": "feat", "section": "âœ¨ Features", "hidden": false },
                        { "type": "feature", "section": "âœ¨ Features", "hidden": false },
                        { "type": "fix", "section": "ğŸ› Bug Fixes", "hidden": false },
                        { "type": "hotfix", "section": "ğŸ› Bug Fixes", "hidden": false },
                        {
                            "type": "perf",
                            "section": "âš¡ Performance Improvements",
                            "hidden": false
                        },
                        {
                            "type": "performance",
                            "section": "âš¡ Performance Improvements",
                            "hidden": false
                        },
                        {
                            "type": "optimization",
                            "section": "âš¡ Performance Improvements",
                            "hidden": false
                        },
                        { "type": "security", "section": "ğŸ”’ Security Fixes", "hidden": false },
                        { "type": "refactor", "section": "â™»ï¸ Code Refactoring", "hidden": false },
                        { "type": "improvement", "section": "ğŸ”§ Improvements", "hidden": false },
                        { "type": "enhancement", "section": "ğŸ”§ Improvements", "hidden": false },
                        { "type": "config", "section": "ğŸ”§ Configurations", "hidden": false },
                        { "type": "style", "section": "ğŸ’„ Styles", "hidden": false },
                        { "type": "breaking", "section": "ğŸ’„ Breaking changes", "hidden": false },
                        { "type": "test", "section": "âœ… Tests", "hidden": false },
                        { "type": "build", "section": "ğŸ“¦ Build System", "hidden": false },
                        { "type": "ci", "section": "ğŸ”§ Continuous Integration", "hidden": false },
                        { "type": "cd", "section": "ğŸš€ Continuous Deployment", "hidden": false },
                        { "type": "chore", "section": "ğŸ”§ Chores", "hidden": false },
                        { "type": "revert", "section": "âª Reverts", "hidden": false },
                        { "type": "rollback", "section": "âª Rollback", "hidden": false },
                        { "type": "release", "section": "âª Release", "hidden": false },
                        { "type": "docs", "section": "ğŸ“ Documentation", "hidden": true },
                        { "type": "readme", "section": "ğŸ“ Documentation", "hidden": true }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "VERSION.md"
            }
        ],
        "@semantic-release/github",
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["package.json", "package-lock.json", "VERSION.md"],
                "message": "chore: ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}
